<!-- Start Contact section -->
<section id="mu-contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="mu-contact-area">

          <div class="mu-title">
            <span class="mu-subtitle">Get In Touch</span>
            <h2>Contact Us</h2>
          </div>

          <div class="mu-contact-content">
            <div class="row">

              <div class="col-md-6">
                <div class="mu-contact-left">
                  <!-- Email message div -->
                  <div id="form-messages">
                  </div>
                  <!-- Start contact form -->
                  <%= form_for @contact,
                               html: { id: "ajax-contact",
                                       class: "mu-contact-form" },
                               remote: true do |f| %>
                    <div class="form-group">
                      <%= f.label :name, 'Your Name', for: "name" %>
                      <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Name", required: true %>
                    </div>
                    <div class="form-group">
                      <%= f.label :email, 'Email address', for: "email" %>
                      <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email", required: true %>
                    </div>
                    <div class="form-group">
                      <%= f.label :subject, 'Subject', for: "subject" %>
                      <%= f.text_field :subject, class: "form-control", id: "subject", placeholder: "Subject", required: true %>
                    </div>
                    <div class="form-group">
                      <%= f.label :message, 'Message', for: "message" %>
                      <%= f.text_area :message, class: "form-control", id: "message", cols: "30", rows: "10", placeholder: "Type Your Message", required: true %>
                    </div>

                    <%= f.submit 'Send Message', class: "mu-send-btn" %>
                  <% end %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="mu-contact-right">
                  <div class="mu-contact-widget">
                    <h3>Office Address</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Mollitia temporibus corporis ea non consequatur porro corrupti hic voluptatibus assumenda, doloribus.</p>
                    <address>
                      <p><i class="fa fa-phone"></i> (850) 457 6688</p>
                      <p><i class="fa fa-envelope-o"></i>contact@italiancuisine.com</p>
                      <p><i class="fa fa-map-marker"></i>368 St. Panama City, Florida, USA</p>
                    </address>
                  </div>
                  <div class="mu-contact-widget">
                    <h3>Open Hours</h3>
                    <address>
                      <p><span>Monday - Friday</span> 9.00 am to 12 pm</p>
                      <p><span>Saturday</span> 9.00 am to 10 pm</p>
                      <p><span>Sunday</span> 10.00 am to 12 pm</p>
                    </address>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Contact section -->

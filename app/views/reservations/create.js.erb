$('#top-menu #reservation-link').click();

<% if @reservation.save %>
  $('#reservation-form-messages .text-danger').remove();
  $('.mu-reservation-form').trigger('reset');

  $('#reservation-form-messages').append(
                                          '<div class="text-danger">' +
                                            'Your request has been sent.' +
                                            'Please check your email.' +
                                          '</div>'
                                        );
<% else %>
  var reservation_errors;

  reservation_errors = '<div class="text-danger">' +
                         'You have errors, please correct the following:' +
                         '<ul>' +
                           <% @reservation.errors.full_messages.each do |msg| %>
                             '<li><%= msg %></li>' +
                           <% end %>
                         '</ul>' +
                        '</div>'

  $('#reservation-form-messages .text-danger').remove();
  $('#reservation-form-messages').append(reservation_errors);
<% end %>
